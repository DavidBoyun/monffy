{
  "name": "monffy",
  "version": "0.1.0",
  "private": true,
  "description": "MONFFY - Daily Luck + Micro Predictions + NFT on Monad",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "lint": "pnpm --filter web lint",
    "dev:agent": "pnpm --filter @monffy/agent dev",
    "start:agent": "pnpm --filter @monffy/agent start",
    "generate-wallet": "pnpm --filter @monffy/agent generate-wallet",
    "contracts:build": "pnpm --filter contracts build",
    "contracts:test": "pnpm --filter contracts test"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
